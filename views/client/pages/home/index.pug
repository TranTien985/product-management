  section.services-section
    .container
      .services-group
        //-item1
        .col-3.service-item
          img(src='/images/services/hoantien.png' alt='')
          .service-name
            span HOÀN TIỀN 
          p Thế giới cầu lông cam kết hoàn tiền 100% nếu phát hiện hàng giả
        //-item2
        .col-3.service-item
          img(src='/images/services/giaohang.png' alt='')
