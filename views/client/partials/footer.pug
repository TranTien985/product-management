  .footer-top
    .container
      //- footer-top__contentc cho background
      .footer-top__content
        .footer-newsletter
          img(src='/images/fly-icon.png' alt='fly-icon')
          .newsletter-title
            h3 Đăng ký nhận ưu đãi
        //- 
        .newsletter-desc
          p
            | ...và Voucher
            strong  miễn phí cho đơn hàng đầu tiên
