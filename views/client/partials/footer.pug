    .footer-bottom
      .footer-copyright Copyright 2025 © Thế giới Cầu lông
      .footer-paymentmethod
        .payment-method-item
          span(style='font-weight:700') VISA
        .payment-method-item
          span PayPal
        .payment-method-item
