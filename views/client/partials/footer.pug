      .footer-main__info
        .footer-main__info-column
          .footer-main__info-title
            h3 Thế giới cầu lông
          .footer-main__info-item
            a(href='/')
              span Về Thế giới cầu lông
          .footer-main__info-item
            a(href='/#hotlineModal')
              span Liên hệ
          .footer-main__info-item
            a(href='/news/detail/the-gioi-cau-long-tuyen-dung')
              span Tuyển dụng
        .footer-main__info-column
          .footer-main__info-title
            h3 Đơn hàng
          .footer-main__info-item
            a(href='/tracking-product')
              span Kiểm tra đơn hàng
          .footer-main__info-item
            a(href='/policy/shippingPolicy')
              span Chính sách vận chuyển
          .footer-main__info-item
            a(href='/policy/returnPolicy')
              span Chính sách đổi trả
          .footer-main__info-item
            a(href='/policy/warrantyPolicy')
              span Chính sách bảo hành
