mixin product-item(item)
  .col-3.mb-3 
    .product-item 
      a(href=`/products/detail/${item.slug}`)
        .inner-image 
          img(
            src=item.thumbnail,
            alt=item.title)
          if item.featured == "1"
            .inner-featured Nổi bật 
        .inner-content 
          h3.inner-title 
            a(href=`/products/detail/${item.slug}`) #{item.title}
          .inner-price-new #{item.priceNew.toLocaleString('vi-VN')} ₫
          .inner-price #{item.price.toLocaleString('vi-VN')} ₫
          .inner-quantity-sold Đã bán #{item.quantity_sold}
          if(item.discountPercentage != 0)
            .inner-discount #{item.discountPercentage} ₫ 