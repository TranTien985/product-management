mixin news-item(item)
  .col-6  
    if(item.prioritize = 1)
      .news-prioritize-item 
        .inner-image 
          img(
            src=item.thumbnail,
            alt=item.title)
        .inner-content 
          h3.inner-title 
            a(href=`/news/detail/${item.slug}`) #{item.title}
          .inner-news-date <i class="fa-regular fa-clock"></i> 
          span 
            +formatDate(item.createAt)
          p.inner-news-short !{item.description.substring(0, 250) + '[...]'}
  .col-3.mb-3 
    if(item.prioritize = 0)
      .news-item 
        .inner-image 
          img(
            src=item.thumbnail,
            alt=item.title)
        .inner-content  
          h3.inner-title 
            a(href=`/news/detail/${item.slug}`) #{item.title}
          .inner-news-date <i class="fa-regular fa-clock"></i> 
          span 
            +formatDate(item.createAt)