extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main 
  h1(class="mb-4") Trang tạo tài khoản

  +alert-error(5000)
  +alert-success(5000)

  form(
    action=`${prefixAdmin}/settings/general?_method=PATCH`
    method="POST"
    enctype="multipart/form-data" 
  )
    div(class="form-group")
      label(for="websiteName") Tên website
      input(
        type="text"
        class="form-control"
        id="websiteName"
        name="websiteName"
        value= settingGeneral ? settingGeneral.websiteName : ""
      )
    div(
      class="form-group"
      upload-image 
    )
      label(for="logo") Logo
      input(
        type="file"
        class="form-control-file"
        id="logo"
        name="logo"
        accept="image/*"
        upload-image-input
      )
      div(class="upload-image")
        img(
          src= settingGeneral ? settingGeneral.logo : ""
          upload-image-preview
        )
        i(
          class="fa-solid fa-x hide"
          icon-delete-image
        )
    div(class="form-group")
      label(for="phone") Số điện thoại 
      input(
        type="number"
        class="form-control"
        id="phone"
        name="phone"
        value= settingGeneral ? settingGeneral.phone : ""
      )
    div(class="form-group")
      label(for="email") Email 
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        value= settingGeneral ? settingGeneral.email : ""
      )
    div(class="form-group")
      label(for="email") Địa chỉ
      input(
        type="text"
        class="form-control"
        id="address"
        name="address"
        value= settingGeneral ? settingGeneral.address : ""
      )
    div(class="form-group")
      label(for="returnPolicy") Chính sách đổi trả
      textarea(
        class="form-control textarea-mce"
        id="returnPolicy"
        name="returnPolicy"  
        rows="5"
      ) #{settingGeneral ? settingGeneral.returnPolicy : ""} 

    div(class="form-group")
      label(for="shippingPolicy") Chính sách vận chuyển
      textarea(
        class="form-control textarea-mce"
        id="shippingPolicy"
        name="shippingPolicy" 
        rows="5"
      ) #{settingGeneral ? settingGeneral.shippingPolicy : ""}

    div(class="form-group")
      label(for="warrantyPolicy") Chính sách bảo hành
      textarea(
        class="form-control textarea-mce"
        id="warrantyPolicy"
        name="warrantyPolicy" 
        rows="5"
      ) #{settingGeneral ? settingGeneral.warrantyPolicy : ""}) 

    div(class="form-group")
      label(for="copyright") Copyright 
      input(
        type="text"
        class="form-control"
        id="copyright"
        name="copyright"
        value= settingGeneral ? settingGeneral.copyright : ""
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật