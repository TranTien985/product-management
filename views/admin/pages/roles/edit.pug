extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main 
  +alert-success(5000)
  +alert-error(5000)

  h1 Thêm mới nhóm quyền 


  form(
    action=`${prefixAdmin}/roles/edit/${records.id}?_method=PATCH`
    id="form-edit-roles"
    method="POST"
    enctype="multipart/form-data" 
  )

    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=records.title
        required
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      ) #{records.description}
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
