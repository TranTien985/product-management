extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main 
  h1(class="mb-4") Trang tạo tài khoản

  +alert-error(5000)
  +alert-success(5000)

  form(
    action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data" 
  )
    //- phương thức enctype dùng để sử dụng thư viện "multer"
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=data.fullName
      )
      p Kiểm tra fullName: #{data.fullName}
    div(class="form-group")
      label(for="email") Email *
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        value=data.email
      )
    div(class="form-group")
      label(for="password") Mật Khẩu *
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
        value=data.password
      )
    div(class="form-group")
      label(for="phone") Số điện thoại 
      input(
        type="number"
        class="form-control"
        id="phone"
        name="phone"
        value=data.phone
      )
    div(
      class="form-group"
      upload-image 
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      div(class="upload-image")
        img(
          src="data.avatar"
          upload-image-preview
        )
        i(
          class="fa-solid fa-x hide"
          icon-delete-image
        )
    div(class="form-group")
      label(for="role_id") Phân quyền
      select(name="role_id" id="role_id" class="form-control")
        option(disabled) -- Chọn --
        each item in roles
          option(
            value=item.id
            selected=(item.id == data.roles_id ? true : false) 
            ) #{item.title}
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="availabilityStatus"
        value="In Stock"
        checked=(data.availabilityStatus == "In Stock" ? true : false)
      ) 
      label(for="statusActive" class="form-check-label") Hoạt động 
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="availabilityStatus"
        value="Low Stock"
        checked=(data.availabilityStatus == "Low Stock" ? true : false)
      ) 
      label(for="statusInActive" class="form-check-label") Dừng hoạt động 
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới