extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main 
  +alert-success(5000)
  +alert-error(5000)

  h1(class="mb-4") Chỉnh sửa sản phẩm

  form(
    action=`${prefixAdmin}/products-category/edit/${records.id}?_method=PATCH`
    id="form-edit-product-category"
    method="POST"
    enctype="multipart/form-data" 
  )
    //- phương thức enctype dùng để sử dụng thư viện "multer"
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=records.title
      )
    div(class="form-group")
      label(for="parent_id") Danh mục cha
      input(
        type="text"
        class="form-control"
        id="parent_id"
        name="parent_id"
        value=records.parent_id
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control textarea-mce"
        id="desc"
        name="description"
        rows="5"
      ) #{records.description}
    div(
      class="form-group"
      upload-image 
    )
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      div(class="upload-image")
        img(
          src=records.thumbnail
          upload-image-preview
        )
        i(
          class="fa-solid fa-x hide"
          icon-delete-image
        )
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="tự động tăng"
        min="1"
        value=records.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="availabilityStatus"
        value="In Stock"
        checked=(records.availabilityStatus == "In Stock" ? true : false)
      ) 
      label(for="statusActive" class="form-check-label") Hoạt động 
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="availabilityStatus"
        value="Low Stock"
        checked=(records.availabilityStatus == "Low Stock" ? true : false)
      ) 
      label(for="statusInActive" class="form-check-label") Dừng hoạt động 
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật

  script(src="/admin/js/product.js") 