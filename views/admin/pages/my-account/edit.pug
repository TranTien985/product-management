extends ../../layouts/default.pug
include ../../mixins/show-alert.pug

block main 
  h1(class="mb-4") Trang chỉnh sửa thông tin tài khoản

  +alert-error(5000)
  +alert-success(5000)

  form(
    action=`${prefixAdmin}/my-account/edit?_method=PATCH`
    method="POST"
    enctype="multipart/form-data" 
  )
    //- phương thức enctype dùng để sử dụng thư viện "multer"
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=user.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        value=user.email
      )
    div(class="form-group")
      label(for="password") Mật Khẩu 
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      )
    div(class="form-group")
      label(for="phone") Số điện thoại 
      input(
        type="number"
        class="form-control"
        id="phone"
        name="phone"
        value=user.phone
      )
    div(
      class="form-group"
      upload-image 
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      div(class="upload-image")
        img(
          src="user.avatar"
          upload-image-preview
        )
        i(
          class="fa-solid fa-x hide"
          icon-delete-image
        )
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật