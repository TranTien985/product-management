mixin pagination(pagination)
  -
    const current = pagination.currentPage;
    const total = pagination.totalPages;
    const delta = 2; // số trang hiển thị 2 bên
    const range = [];
    const rangeWithDots = [];
    let last;

    for (let i = 1; i <= total; i++) {
      if (i === 1 || i === total || (i >= current - delta && i <= current + delta)) {
        range.push(i);
      }
    }

    for (let i of range) {
      if (last) {
        if (i - last === 2) {
          rangeWithDots.push(last + 1);
        } else if (i - last !== 1) {
          rangeWithDots.push('...');
        }
      }
      rangeWithDots.push(i);
      last = i;
    }

  nav
    ul(class='pagination')

      if (current > 1)
        li.page-item
          button.page-link(button-pagination=current-1) Trang trước

      each i in rangeWithDots
        if i === '...'
          li.page-item.disabled
            span.page-link ...
        else
          li(class=`page-item ${current == i ? "active" : ""}`)
            button.page-link(button-pagination=i)= i

      if (current < total)
        li.page-item
          button.page-link(button-pagination=current+1) Trang sau
