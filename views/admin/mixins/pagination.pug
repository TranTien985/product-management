mixin pagination(pagination)
  nav
    ul(class='pagination')

      //-  Nút Trang trước
      if (pagination.currentPage > 1)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=pagination.currentPage - 1
          ) Trang trước

      //- Tính phạm vi hiển thị
      -
        var total = pagination.totalPages;
        var current = pagination.currentPage;
        var maxVisible = 10;
        var start = Math.max(1, current - Math.floor(maxVisible / 2));
        var end = Math.min(total, start + maxVisible - 1);
        if (end - start < maxVisible - 1)
          start = Math.max(1, end - maxVisible + 1);

      //- Hiển thị trang đầu nếu chưa nằm trong phạm vi
      if (start > 1)
        li(class="page-item")
          button(class="page-link" button-pagination=1) 1
        if (start > 2)
          li(class="page-item disabled")
            span(class="page-link") ...

      //-  Hiển thị các trang trong phạm vi
      - for (var i = start; i <= end; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
          button(class="page-link" button-pagination=i) #{i}

      //-  Hiển thị trang cuối nếu còn nhiều hơn
      if (end < total)
        if (end < total - 1)
          li(class="page-item disabled")
            span(class="page-link") ...
        li(class="page-item")
          button(class="page-link" button-pagination=total) #{total}

      //-  Nút Trang sau
      if (pagination.currentPage < pagination.totalPages)
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=pagination.currentPage + 1
          ) Trang sau
